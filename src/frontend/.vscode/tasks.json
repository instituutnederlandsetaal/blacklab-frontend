{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch project for errors and put them in the problems view (uses vue-tsc + eslint.config.js)",
			"type": "shell",
			"command": "npx",
			"args": ["vue-tsc", "-w", "-p", "."],
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen",
				"instanceLimit": 1,
				"reevaluateOnRerun": true
			},
			"problemMatcher": "$tsc-watch",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "start development server (npm start)",
			"type": "shell",
			"command": "npm",
			"args": ["start"],
			"isBackground": true,
			"runOptions": {
				"instanceLimit": 1
			},
			"problemMatcher": {
				"owner": "webpack",
				"fileLocation": "relative",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^webpack \\d+\\.\\d+\\.\\d+ compiled",
					"endsPattern": "^webpack \\d+\\.\\d+\\.\\d+ compiled"
				},
				"pattern": [
					{
						"regexp": "^(ERROR|WARNING) in ([^\\s]+) (\\d+)(?::(\\d+))?(?:-(\\d+)(?::(\\d+))?)?$",
						"severity": 1,
						"file": 2,
						"line": 3,
						"column": 4,
						"endLine": 5,
						"endColumn": 6
					},
					{
						"regexp": "^(TS\\d+): (.+)$",
						"code": 1,
						"message": 2,
						"loop": true
					}
				]
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}

